ifeq ($(gcdSTATIC_LINK), 1)
# Default appendix for GL name collision.
GL_11_APPENDIX ?= _es11
GL_2_APPENDIX  ?= _es2
endif

##############################################
# Include the global difinitions.

include $(AQROOT)/makefile.linux.def

################################################################################
# Supply additional include directories.

INCLUDE += -I$(VIVANTE_SDK_INC) -I$(VIVANTE_SDK_INC)/HAL -I$(AQROOT)/sdk/inc
INCLUDE += -I$(CURDIR)/../Common
ifeq ($(EGL_API_DRI), 1)
	INCLUDE += -I$(X11_ARM_DIR)/include
endif
ifeq ($(EGL_API_X), 1)
	INCLUDE += -I$(X11_ARM_DIR)/include
endif

CFLAGS += $(INCLUDE)

################################################################################
# Supply necessary libraries.

ifeq ($(gcdSTATIC_LINK), 1)
    LIBS += $(VIVANTE_SDK_LIB)/libVIVANTE.a
else
  ifeq ($(QNX), 1)
  else
    LIBS += -L$(VIVANTE_SDK_LIB)
  endif
  LIBS += -lVDK -lEGL -lGLESv2 -lGAL
endif

ifeq ($(QNX), 1)
  LIBS += -lm
else
  LIBS += -lm -lpthread -ldl -lrt
  ifeq ($(EGL_API_DRI), 1)
    LIBS += -L$(X11_ARM_DIR)/lib -lXdamage -lXfixes -lXext -lXau -lXdmcp -lX11
  endif
  ifeq ($(EGL_API_X), 1)
    LIBS += -L$(X11_ARM_DIR)/lib -lXau -lXdmcp -lX11
  endif
endif

VDK_COMMON_LIB_DIR ?= $(CURDIR)/../Common/$(OBJ_DIR)
