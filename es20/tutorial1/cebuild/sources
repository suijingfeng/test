TARGETNAME  = tutorial1_es20
TARGETTYPE  = PROGRAM
WARNISERROR = 0

SOURCES= \
  ../tutorial1.cpp \

INCLUDES=$(INCLUDES);$(AQROOT)\sdk\samples\vdk\es20\tutorial1
